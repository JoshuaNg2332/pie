{
    "extends": [
      "schedule:weekly",
      ":rebaseStalePrs",
      ":disableMajorUpdates",
      ":dependencyDashboard"
    ],
    "commitMessagePrefix": "renovate -",
    "prConcurrentLimit": 3,
    "packageRules": [
        {
            "matchPackagePatterns": ["*"],
            "enabled": false
        },
        {
            "description": "Disable major root package.json babel devDeps.",
            "matchPaths": ["**/package.json"],
            "matchDepTypes": ["devDependencies"],
            "matchPackagePatterns": ["^@babel/"],
            "groupName": "Disable Major Babel",
            "groupSlug": "disable-root-babel-devDeps",
            "enabled": false,
            "matchUpdateTypes": [
                "major"
            ]
        },
        {
            "description": "Update root package.json babel devDeps.",
            "matchPaths": ["**/package.json"],
            "matchDepTypes": ["devDependencies"],
            "matchPackagePatterns": ["^@babel/"],
            "groupName": "Babel",
            "groupSlug": "root-babel-devDeps",
            "enabled": true,
            "matchUpdateTypes": [
                "minor",
                "patch"
            ]
        }
    ]
  }
